<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>Blog</title>
	</head>
	<body>
		<div class="container">
			<h1 class="mb-4">Articles</h1>
			<a href="/articles/new" class="btn btn-success">Create New</a>
			<a href="/users" class="btn btn-primary">Sign Up</a>
			<a href="/users/logout" class="btn btn-danger">Logout</a>
			<% articles.forEach(article => { %>
				<div class="card mt-4">
					<div class="card.body">
						<h4 class="card.title"><%= article.title %></h4>
						<div class="card-subtitle text-muted mb-2">
							<%= article.createdAt.toLocaleDateString()%>
						</div>
						<div class="card-text mb-2"><%= article.author %></div>
						<a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
						<a href="/articles/edit/<%= article.id %>/ER" class="btn btn-info">Edit</a>
						<a href="/articles/delete/<%= article.id %>/ER" class="btn btn-danger">Delete</a>
					</div>
				</div>
			<% }) %>
		</div>
		<!-- <img src="/images/images.jpeg" /> -->
	</body>
</html>